#!/bin/bash

export CFLAGS="-O2"
export CXXFLAGS="-O2"

PKG_VER=1.52.0
MAJOR=$(echo $PKG_VER | sed 's|.[^.]*$||g')
URL=https://gitlab.freedesktop.org/NetworkManager/NetworkManager/-/releases/$PKG_VER/downloads/NetworkManager-$PKG_VER.tar.xz
TAR=$(echo $URL | sed -r 's|(.*)/||')
DIR=$(echo $TAR | sed 's|.tar.*||g')
PACKAGE=network-manager

# Get Package

cd /blfs/builds
wget $URL
tar -xvf $TAR
cd $DIR

# Build


grep -rl '^#!.*python$' | xargs sed -i '1s/python/&3/'

mkdir build
cd build


meson --prefix=/usr              \
      --buildtype=release        \
      -Dlibaudit=no              \
      -Dnmtui=true               \
      -Dovs=false                \
      -Dppp=false                \
      -Dselinux=false            \
      -Dqt=false                 \
      -Dsession_tracking=systemd \
      -Dmodem_manager=true \
      .. &&
ninja






# Install
sudo  DESTDIR=/pkgs/$PACKAGE ninja install
sudo ninja install
cd /pkgs



sudo echo "libpsl jansson libndp dhcpcd iptables newt nss pygobject3 systemd upower wpa_supplicant curl" > /pkgs/$PACKAGE/depends
sudo echo "modem-manager" > /pkgs/$PACKAGE/make-depends
sudo echo "$PKG_VER" > /pkgs/$PACKAGE/version
sudo tar -cvzpf $PACKAGE.tar.xz $PACKAGE
sudo cp $PACKAGE.tar.xz /finished


cd /blfs/builds
sudo rm -r $DIR


