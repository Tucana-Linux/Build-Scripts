#!/bin/bash

export CFLAGS=-"O2"
export CXXFLAGS="-O2"
#CURRENCY_TAG_OVERRIDE

PKG_VER=24.3.1
URL=https://github.com/intel/media-driver/archive/refs/tags/intel-media-$PKG_VER.tar.gz
TAR=$(echo $URL | sed -r 's|(.*)/||')
DIR=media-driver-$(echo $TAR | sed 's|.tar.*||g')
PACKAGE=intel-media-driver

# Get Package

cd /blfs/builds
wget $URL
tar -xvf $TAR
cd $DIR

# Build
mkdir build &&
cd    build &&

cmake -DCMAKE_INSTALL_PREFIX=/usr   \
      -DINSTALL_DRIVER_SYSCONF=OFF  \
      -DBUILD_TYPE=Release          \
      -DMEDIA_BUILD_FATAL_WARNINGS=OFF \
      -Wno-dev ..


make -j22


# Install
sudo make DESTDIR=/pkgs/$PACKAGE install
sudo make install
cd /pkgs



sudo echo "libva intel-gmmlib" > /pkgs/$PACKAGE/depends
sudo echo "" > /pkgs/$PACKAGE/make-depends
sudo tar -cvzpf $PACKAGE.tar.xz $PACKAGE
sudo cp $PACKAGE.tar.xz /finished


cd /blfs/builds
sudo rm -r $DIR


