#!/bin/bash

export CFLAGS=-"O2"
export CXXFLAGS="-O2"

URL=https://archive.xfce.org/src/xfce/xfce4-session/4.18/xfce4-session-4.18.0.tar.bz2
TAR=$(echo $URL | sed -r 's|(.*)/||')
DIR=$(echo $TAR | sed 's|.tar.*||g')
PACKAGE=$(echo $DIR | sed 's|-[^-]*$||g')

# Get Package

cd /blfs/builds
wget $URL
tar -xvf $TAR
cd $DIR

# Build



./configure --prefix=/usr \
            --sysconfdir=/etc \
            --disable-legacy-sm


make -j22


# Install
sudo make DESTDIR=/pkgs/$PACKAGE install
sudo make install
cd /pkgs



sudo echo "libwnck libxfce4ui desktop-file-utils polkit-gnome shared-mime-info" > /pkgs/$PACKAGE/depends
sudo echo "" > /pkgs/$PACKAGE/make-depends
sudo echo "update-desktop-database && update-mime-database /usr/share/mime" > /pkgs/$PACKAGE/postinst
sudo tar -cvzpf $PACKAGE.tar.xz $PACKAGE
sudo cp $PACKAGE.tar.xz /finished


cd /blfs/builds
sudo rm -r $DIR


