#!/bin/bash

export CFLAGS="-O2 -fcf-protection=none"
export CXXFLAGS="-O2 -fcf-protection=none"
set -e
PKG_VER=2.46.0
URL=https://webkitgtk.org/releases/webkitgtk-$PKG_VER.tar.xz
TAR=$(echo $URL | sed -r 's|(.*)/||')
DIR=$(echo $TAR | sed 's|.tar.*||g')
PACKAGE=webkitgtk5.0

# Get Package

cd /blfs/builds
wget $URL
tar -xvf $TAR
cd $DIR

# Build
mkdir build1 &&
cd    build1 &&


cmake -DPORT=GTK \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_INSTALL_LIBEXECDIR=lib \
    -DCMAKE_SKIP_RPATH=ON \
    -DUSE_GTK4=ON \
    -DUSE_LIBBACKTRACE=OFF \
    -DUSE_LIBHYPHEN=OFF \
    -DENABLE_GAMEPAD=OFF \
    -DUSE_SOUP2=OFF \
    -DENABLE_DOCUMENTATION=ON \
    -DENABLE_MINIBROWSER=ON \
    -G Ninja \
    ..


ninja


# Install
ninja install
DESTDIR=/pkgs/$PACKAGE ninja install
cd /pkgs

#Strip binaries
pushd .
cd /pkgs/$PACKAGE/usr/lib
strip $(file * | grep ELF | sed 's/:.*//')
popd

sudo echo "cairo libjxl gst-plugins-base woff2 gst-plugins-bad gtk3 libsoup3 icu lcms libgudev libsecret libsoup libwebp mesa openjpeg ruby sqlite which wpebackend-foo enchant geoclue gobject-introspection hicolor-icons libnotify wayland xdg-dbus-proxy" > /pkgs/$PACKAGE/depends
sudo echo "bubblewrap unifdef gi-docgen libavif sysprof" > /pkgs/$PACKAGE/make-depends
sudo tar -cvzpf $PACKAGE.tar.xz $PACKAGE
sudo cp $PACKAGE.tar.xz /finished


cd /blfs/builds
sudo rm -r $DIR


