#!/bin/bash

export CFLAGS="-O2 -fcf-protection=none"
export CXXFLAGS="-O2 -fcf-protection=none"

set -e
PKG_VER=2.48.1
URL=https://webkitgtk.org/releases/webkitgtk-$PKG_VER.tar.xz
TAR=$(echo $URL | sed -r 's|(.*)/||')
DIR=$(echo $TAR | sed 's|.tar.*||g')
PACKAGE=$(echo $DIR | sed 's|-[^-]*$||g')

# Get Package

cd /blfs/builds
wget $URL
tar -xvf $TAR
cd $DIR

# Build
sed '/U_SHOW_CPLUSPLUS_API/a#define U_SHOW_CPLUSPLUS_HEADER_API 0' -i Source/WTF/wtf/Platform.h
mkdir build1 &&
cd    build1 &&

cmake  \
    -DPORT=GTK \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_INSTALL_LIBEXECDIR=lib \
    -DCMAKE_SKIP_RPATH=ON \
    -DUSE_GTK4=OFF \
    -DUSE_LIBBACKTRACE=OFF \
    -DUSE_LIBHYPHEN=OFF \
    -DUSE_SOUP2=ON \
    -DENABLE_DOCUMENTATION=ON \
    -DENABLE_GAMEPAD=OFF \
    -DENABLE_MINIBROWSER=ON \
    -Wno-dev -G Ninja ..

ninja


# Install
ninja install
DESTDIR=/pkgs/$PACKAGE ninja install
cd /pkgs


#Strip binaries
pushd .
cd /pkgs/$PACKAGE/usr/lib
strip $(file * | grep ELF | sed 's/:.*//')
popd

sudo echo "libjxl cairo woff2 gst-plugins-base gst-plugins-bad flite gtk3 icu lcms libgudev libsecret libsoup libwebp mesa openjpeg ruby sqlite which wpebackend-foo enchant geoclue gobject-introspection hicolor-icons libnotify wayland xdg-dbus-proxy libavif" > /pkgs/$PACKAGE/depends
sudo echo "unifdef gi-docgen bubblewrap libavif sysprof flite" > /pkgs/$PACKAGE/make-depends
sudo tar -cvzpf $PACKAGE.tar.xz $PACKAGE
sudo cp $PACKAGE.tar.xz /finished


cd /blfs/builds
sudo rm -r $DIR


