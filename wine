#!/bin/bash

export CFLAGS=-"O2"
export CXXFLAGS="-O2"
PKG_VER=8.18
URL=https://dl.winehq.org/wine/source/8.x/wine-$PKG_VER.tar.xz
TAR=$(echo $URL | sed -r 's|(.*)/||')
DIR=$(echo $TAR | sed 's|.tar.*||g')
PACKAGE=wine

# Get Package
set -e
cd /blfs/builds
wget $URL
tar -xvf $TAR
cd $DIR

# Build Wine 64
mkdir wine-64
mkdir wine-32

cd wine-64 
../configure --prefix=/usr --enable-win64 --with-x
make -j22

cd ../wine-32
../configure --prefix=/usr --with-x --with-wine64=../wine-64 --libdir=/usr/lib32
make -j22








# Install Wine32
sudo make install
sudo make DESTDIR=/pkgs/$PACKAGE install
cd /pkgs/wine/usr/lib32/wine/i386-windows
i686-w64-mingw32-strip *.dll
unset PKG_CONFIG_PATH

# Install wine64
cd /blfs/builds/$DIR/wine-64
sudo make install
sudo make DESTDIR=/pkgs/$PACKAGE install
cd /pkgs/wine/usr/lib/wine/x86_64-windows
x86_64-w64-mingw32-strip *.dll

cd /pkgs



sudo echo "lib32-acl lib32-alsa-lib lib32-at-spi2-core lib32-attr lib32-brotli lib32-bzip2 lib32-cairo lib32-check lib32-curl lib32-dbus lib32-expat lib32-file lib32-fontconfig lib32-freetype2 lib32-fribidi lib32-gdk-pixbuf lib32-gettext lib32-glibc lib32-glib lib32-glu lib32-gmp lib32-gnutls lib32-gtk2 lib32-harfbuzz lib32-icu lib32-intel-vaapi lib32-kmod lib32-libcap lib32-libdmx lib32-libdrm lib32-libelf lib32-libffi lib32-libfontenc lib32-libFS lib32-libgcc lib32-libgudev lib32-libICE lib32-libjpeg-turbo lib32-libndp lib32-libpciaccess lib32-libpng12 lib32-libpng lib32-libSM lib32-libsndfile lib32-libtool lib32-libunwind lib32-libva lib32-libvdpau lib32-libvpx-old lib32-libvpx lib32-libvulkan lib32-libX11 lib32-libxau lib32-libXaw lib32-libxcb lib32-libXcomposite lib32-libXcursor lib32-libXdamage lib32-libXdmcp lib32-libXext lib32-libXfixes lib32-libXfont2 lib32-libXft lib32-libXinerama lib32-libXi lib32-libxkbfile lib32-libxml2 lib32-libXmu lib32-libXpm lib32-libXrandr lib32-libXrender lib32-libXres lib32-libXScrnSaver lib32-libxshmfence lib32-libXtst lib32-libXt lib32-libXvMC lib32-libXv lib32-libXxf86dga lib32-libXxf86vm lib32-llvm lib32-mesa lib32-ncurses lib32-nettle lib32-network-manager lib32-openal lib32-openldap lib32-openssl lib32-pam lib32-pango lib32-pcre lib32-pipewire lib32-pixman lib32-polkit lib32-pulseaudio lib32-readline lib32-sdl2 lib32-systemd lib32-util-linux lib32-util-macros lib32-vkd3d lib32-wayland lib32-xorg-libs lib32-xtrans lib32-xz lib32-zlib lib32-zstd libgcc gstreamer desktop-file-utils sdl2" > /pkgs/$PACKAGE/depends
sudo echo "x86_64-w64-mingw32-gcc x86_64-w64-mingw32-binutils x86_64-mingw32-mingw i686-w64-mingw32-binutils i686-w64-mingw32-gcc i686-w64-mingw32-mingw lib32-glibc lib32-xorg-libs xorg-libs lib32-gnutls make-ca" > /pkgs/$PACKAGE/make-depends
sudo tar -cvzpf $PACKAGE.tar.xz $PACKAGE
sudo cp $PACKAGE.tar.xz /finished


cd /blfs/builds
sudo rm -r $DIR


